{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "body": [{
        "type": "style",
        "src": "./src/app/app.css"
      },
      {
        "type": "script",
        "src": "./src/app/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [{
      "options": ["_default"],
      "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
    }]
  },
  "hooks": [{
    "endpoint": "https://clickflow-api.ngrok.io/api/v1/cloudflare",
    "events": ["oauth-login"],
    "block": true,
    "authenticate": ["account"],
    "failure": {
      "action": "notify",
      "message": "There was an error communicating with Clickflow."
    }
  }],
  "options": {
    "properties": {
      "account": {
        "order": 0,
        "title": "Clickflow Account",
        "type": "object",
        "format": "account",
        "services": ["clickflow-2"],
        "required": true
      }
    }
  }
}
